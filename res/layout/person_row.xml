<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personRow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/personStatus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:contentDescription="@string/personStatus"
        android:src="@drawable/out" />

    <TextView
        android:id="@+id/personName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/personStatus"
        android:gravity="center_vertical"
        android:text="Persons Name"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/personMessage"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center_vertical"
        android:layout_alignLeft="@+id/personName"
        android:layout_alignRight="@+id/personName"
        android:layout_below="@+id/personName"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:text="Persons Message" />

</RelativeLayout>